{
  "name": "calibration-app",
  "version": "1.1.0",
  "description": "Calibration log app using Express + SQLite + Socket.IO + Chart.js + Excel export",
  "main": "electron/main.js",
  "scripts": {
    "start": "node server.js",
    "start:lan": "cross-env HOST=0.0.0.0 node server.js",
    "electron:start": "electron electron/main.js",
    "preelectron:build": "rimraf dist",
    "electron:build": "electron-builder --win --x64"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.5",
    "sql.js": "^1.9.0"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.calibration.app",
    "productName": "Calibration App",
    "directories": {
      "output": "dist",
      "buildResources": "electron/resources"
    },
    "asarUnpack": [
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "files": [
      "electron/**/*",
      "public/**/*",
      "server.js",
      "package.json",
      "data/**/*",
      "uploads/**/*"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "data",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "uploads/",
        "to": "uploads",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
